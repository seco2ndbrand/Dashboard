<script>
(function(){
  const items = document.querySelectorAll(".seco2nd-vogue-faq .faq-item");
  items.forEach(item=>{
    item.addEventListener("click",()=>{
      items.forEach(i=> i!==item && i.classList.remove("active"));
      item.classList.toggle("active");
    });
  });
})();
</script>
